@using Microsoft.Extensions.Options
@using Microsoft.Fast.Components.FluentUI

@inject NavigationManager NavigationManager

<div style="margin:10px">

    <div style="display: flex; justify-content: space-between;">
        <div style="width:70%">
            <h5>Settings</h5>
        </div>

        <div style="width:30%">
            <FluentButton style="margin-left:5px;padding-top: 0px;height: 28px;" @onclick=@(()=>NavigateBackClick())>
                <FluentIcon Value="@(new Icons.Regular.Size16.ArrowCircleLeft())"
                            Appearance="Appearance.Filled" />
                Back
            </FluentButton>
        </div>
    </div>    

    <FluentTabs Orientation="Orientation.Vertical" style="width:80%">
        @* style="margin-left:50px; margin-top:10px *@
        <FluentTab >
             <Header>
                Recognition Group
                </Header>
                <Content >
                <RecognitionGroupAdmin />
            </Content>
        </FluentTab>

        <FluentTab>
             <Header>
                Recognition
                </Header>
                <Content>
                <RecognitionAdmin />
            </Content>
        </FluentTab>

        <FluentTab>
            <Header>
                Administrators
            </Header>
            <Content>
                <AdminUsers />
            </Content>
        </FluentTab>        
        <FluentTab>
            <Header>
                Score
            </Header>
            <Content>
                <Score />
            </Content>
        </FluentTab>
        


    </FluentTabs>
</div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
    }

    private void NavigateBackClick()
    {
        NavigationManager.NavigateTo("/tab");
    }

}