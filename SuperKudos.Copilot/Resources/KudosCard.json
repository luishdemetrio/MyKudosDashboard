{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${name}",
              "wrap": true,
              "size": "Large"
            },
            {
              "type": "TextBlock",
              "spacing": "Small",
              "text": "Received a **${recognition}** recognition.",
              "isSubtle": true,
              "wrap": true,
              "size": "Medium"
            },
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "None",
                      "text": "Sent by:",
                      "isSubtle": true,
                      "wrap": true,
                      "separator": true,
                      "size": "Medium"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "Image",
                      "style": "Person",
                      "url": "${fromPersonImage}",
                      "size": "Small",
                      "width": "36px",
                      "height": "36px"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "Small",
                      "text": "${from}",
                      "isSubtle": true,
                      "wrap": true,
                      "size": "Medium",
                      "weight": "Bolder"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                }
              ]
            },
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "None",
                      "text": "Sent on:",
                      "isSubtle": true,
                      "wrap": true,
                      "separator": true,
                      "size": "Medium"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "Small",
                      "text": "${sentOn}",
                      "isSubtle": true,
                      "wrap": true,
                      "size": "Medium",
                      "weight": "Bolder"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                }
              ]
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${message}",
      "wrap": true,
      "size": "Medium",
      "fontType": "Default",
      "isSubtle": true
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "üëç Like",
      "verb": "send-like",
      "id": "likeButton",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "Liked",
          "text": "Liked",
          "value": "{\"bfKey\": \"bfVal\", \"conflictKey\": \"from value\"}"
        },
        "kudosId": "${kudosId}",
        "userProfileId": "${userProfileId}"
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "‚Ü©Ô∏è Reply",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Text",
            "id": "replyText",
            "placeholder": "Type your reply here",
            "isMultiline": true 
          }
        ],
        "actions": [
          {
            "type": "Action.Execute",
            "title": "Send",
            "verb": "send-reply",
            "id": "replyButton",
            "data": {
              "msteams": {
                "type": "messageBack",
                "displayText": "I clicked this button",
                "text": "text to bots",
                "value": "{\"bfKey\": \"bfVal\", \"conflictKey\": \"from value\"}"
              },

              "extraData": {
                "id": "sendButton",
                "replyText": "${replyText}",
                "kudosId": "${kudosId}",
                "userProfileId": "${userProfileId}"
              }
            }            
          }
        ]
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
  }