{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Super Kudos",
              "wrap": true,
              "size": "Medium"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${toPersonImage}",
              "size": "Medium"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${toPersonName}",
              "wrap": true,
              "size": "Large"
            },
            {
              "type": "TextBlock",
              "spacing": "Small",
              "text": "Received a **${recognitionTitle}** recognition.",
              "isSubtle": true,
              "wrap": true,
              "size": "Medium"
            },
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "None",
                      "text": "Sent by",
                      "isSubtle": true,
                      "wrap": true,
                      "separator": true,
                      "size": "Medium"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "Image",
                      "style": "Person",
                      "url": "${fromPersonImage}",
                      "size": "Small",
                      "width": "36px",
                      "height": "36px"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "Small",
                      "text": "${fromPersonName}",
                      "isSubtle": true,
                      "wrap": true,
                      "size": "Medium",
                      "weight": "Bolder"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                }
              ]
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${kudosMessage}",
      "wrap": true,
      "size": "Medium",
      "fontType": "Default",
      "isSubtle": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Ver detalhes",
      "url": "https://teams.microsoft.com/l/app/266d918f-8feb-4683-a9fb-7f31ee2c4d8c"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
 
}