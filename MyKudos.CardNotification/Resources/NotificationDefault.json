{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${To.Photo}",
              "size": "Medium"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${To.Name}",
              "wrap": true,
              "size": "Large"
            },
            {
              "type": "TextBlock",
              "spacing": "Small",
              "text": "Received a **${Title.Title}** recognition.",
              "isSubtle": true,
              "wrap": true,
              "size": "Medium"
            },
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "None",
                      "text": "Sent by",
                      "isSubtle": true,
                      "wrap": true,
                      "separator": true,
                      "size": "Medium"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "Image",
                      "style": "Person",
                      "url": "${From.Photo}",
                      "size": "Small",
                      "width": "36px",
                      "height": "36px"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "spacing": "Small",
                      "text": "${From.Name}",
                      "isSubtle": true,
                      "wrap": true,
                      "size": "Medium",
                      "weight": "Bolder"
                    }
                  ],
                  "verticalContentAlignment": "Center"
                }
              ]
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${Message}",
      "wrap": true,
      "size": "Medium",
      "fontType": "Default",
      "isSubtle": true
    }
  ]
}